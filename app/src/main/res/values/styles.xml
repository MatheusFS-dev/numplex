<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Settings-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="viewParent.headerText.settingsMiniTitle">
        <item name="android:textColor">#007385</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="settingsText" parent="viewParent.headerText.settingsMiniTitle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <!-- Collapsing toolbar -->
    <style name="Theme.Collapsingtoolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#007385</item>
        <item name="colorPrimaryVariant">#007385</item>
        <item name="colorOnPrimary">#007385</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#007385</item>
        <item name="colorSecondaryVariant">#007385</item>
        <item name="colorOnSecondary">#007385</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#007385</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Buttons -->
    <style name="CalculatorButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_effect_secondary_background</item>
        <item name="android:fontFamily">@font/numplex_font</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">30sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">5sp</item>
        <item name="android:onClick">buttonPressed</item>
    </style>

    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_effect_black</item>
        <item name="android:fontFamily">@font/numplex_font</item>
        <item name="android:onClick">buttonPressed</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">30sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">5sp</item>
    </style>

    <style name="CalculatorButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_effect_blue</item>
        <item name="android:fontFamily">@font/numplex_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">30sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">5sp</item>
        <item name="android:onClick">buttonPressed</item>
    </style>

    <style name="ShiftCalculatorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_effect_secondary_background</item>
        <item name="android:fontFamily">@font/numplex_font</item>
        <item name="android:onClick">buttonPressed</item>
        <item name="android:text">2nd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">25sp</item>
        <item name="autoSizeMaxTextSize">25sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">5sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

</resources>