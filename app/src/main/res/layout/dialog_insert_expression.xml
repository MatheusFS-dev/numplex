<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/ripple_effect"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_expression_to_the_editor"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/numplex_font"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelDialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ripple_effect_cancel"
            android:fontFamily="@font/numplex_font" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesDialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/ripple_effect_check"
            android:fontFamily="@font/numplex_font" />
    </LinearLayout>
</RelativeLayout>